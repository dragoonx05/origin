<!DOCTYPE html>
<html>
<head>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
    <% if signed_in? -%>
      Welcome, <%= link_to current_user.first_name, user_path(current_user.id) %>!
      <%= button_to t(".sign_out"), sign_out_path, method: :delete %>
      <%= link_to "Listings", listings_path %>
    <% else -%>
      <%= link_to t(".sign_in"), sign_in_path %>
    <% end -%>
    <%= link_to "Home", root_path %>
  </div>
  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%=h value %></div>
    <% end %>
  </div>

  <%= yield %>
</body>
</html>
